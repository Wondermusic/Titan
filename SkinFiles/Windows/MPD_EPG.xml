            <TimelineMarkerThickness>0</TimelineMarkerThickness>
          </GuideStyle>
          <ChannelListWidth>177</ChannelListWidth>
          <GuideItemHeight>51</GuideItemHeight>
          <TimelineHeight>45</TimelineHeight>
          <TimelineMultiplier>7</TimelineMultiplier>
          <ChannelStyle StyleId="GuideChannelStyle" />
          <ProgramStyle StyleId="GuideProgramStyle" />
          <CreateDialogId>2000</CreateDialogId>
          <CancelDialogId>2001</CancelDialogId>
        </Control>
      </GroupControls>
    </Control>
    <Control x:type="Group">
      <Name>Window Name</Name>
      <Id>5</Id>
      <Width>1024</Width>
      <Height>156</Height>
      <VisibleCondition />
      <Animations />
      <MediaPortalFocusControls />
      <GroupStyle />
      <GroupControls>
        <Control x:type="Image">
          <Name>Icon</Name>
          <Id>6</Id>
          <Width>60</Width>
          <Height>60</Height>
          <VisibleCondition>!IsTvRecording</VisibleCondition>
          <IsWindowOpenVisible>false</IsWindowOpenVisible>
          <Animations />
          <MediaPortalFocusControls />
          <ImageStyle />
          <Image>\icon_tv.png</Image>
          <ImageStretch>None</ImageStretch>
          <CoverCornerRadius>0,0,0,0</CoverCornerRadius>
        </Control>
        <Control x:type="Label">
          <Name>Name of Window</Name>
          <Id>7</Id>
          <Width>650</Width>
          <Height>60</Height>
          <PosX>85</PosX>
          <PosY>9</PosY>
          <VisibleCondition />
          <Animations />
          <MediaPortalFocusControls />
          <LabelStyle StyleId="Titan50_White" />
          <LabelText>MPDisplay EPG</LabelText>
          <IsScrollingEnabled>false</IsScrollingEnabled>
          <ScrollSpeed>2</ScrollSpeed>
          <IsScrollWrapEnabled>false</IsScrollWrapEnabled>
        </Control>
