  <WindowAnimations />
  <WindowControls>
    <Control x:type="Image">
      <Name>Background Image</Name>
      <Id>1</Id>
      <Width>1366</Width>
      <Height>768</Height>
      <PosX>-171</PosX>
      <VisibleCondition />
      <Animations />
      <MediaPortalFocusControls />
      <ImageStyle StyleId="Background" />
      <ImageStretch>None</ImageStretch>
      <CoverCornerRadius>0,0,0,0</CoverCornerRadius>
    </Control>
    <Control x:type="Group">
      <Name>EPG</Name>
      <Id>2</Id>
      <Width>1024</Width>
      <Height>768</Height>
      <VisibleCondition>IsMediaPortalWindow(600)</VisibleCondition>
      <IsWindowOpenVisible>false</IsWindowOpenVisible>
      <Animations />
      <MediaPortalFocusControls />
      <GroupStyle StyleId="Empty" />
      <GroupControls>
        <Control x:type="Image">
          <Name>Fanart</Name>
          <Id>3</Id>
          <Width>1366</Width>
          <Height>768</Height>
          <PosX>-171</PosX>
          <VisibleCondition />
          <Animations />
          <MediaPortalFocusControls />
