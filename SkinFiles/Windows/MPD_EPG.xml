          <ImageStretch>Fill</ImageStretch>
          <CoverImage x:type="ImageBrush" Image="\fanart_overlay.png" Stretch="Fill" />
          <CoverCornerRadius>0,0,0,0</CoverCornerRadius>
        </Control>
        <Control x:type="Guide">
          <Name>NewGuide</Name>
          <Id>4</Id>
          <Width>1020</Width>
          <Height>660</Height>
          <PosY>100</PosY>
          <VisibleCondition />
          <Animations />
